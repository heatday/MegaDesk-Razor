@page
@model MegaDesk_Razor.Pages.Quotes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quote</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Customer Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Delivery")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.DeliveryType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Width)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Width)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Depth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Depth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Drawer")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.DrawerCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Material")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Material.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Price")
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Quote.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Quote?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
