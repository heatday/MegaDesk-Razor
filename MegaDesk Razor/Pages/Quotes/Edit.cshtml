@page
@model MegaDesk_Razor.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quote.Id" />
            <div class="form-group">
                <label asp-for="Quote.CustomerName" class="control-label">Customer Name</label>
                <input asp-for="Quote.CustomerName" class="form-control beige-input" />
                <span asp-validation-for="Quote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DeliveryTypeId" class="control-label">Delivery</label>
                <select asp-for="Quote.DeliveryTypeId" asp-items="Model.DeliveryTypes" class="form-control beige-input"></select>
                <span asp-validation-for="Quote.DeliveryTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Width" class="control-label"></label>
                <input asp-for="Quote.Width" class="form-control beige-input" />
                <span asp-validation-for="Quote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Depth" class="control-label"></label>
                <input asp-for="Quote.Depth" class="form-control beige-input" />
                <span asp-validation-for="Quote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DrawerCount" class="control-label">Drawer</label>
                <input asp-for="Quote.DrawerCount" class="form-control beige-input" />
                <span asp-validation-for="Quote.DrawerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.MaterialId" class="control-label">Material</label>
                <select asp-for="Quote.MaterialId" asp-items="Model.Materials" class="form-control beige-input"></select>
                <span asp-validation-for="Quote.MaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Save" class="oval-button" /> |
                    <a asp-page="./Index" class="oval-button">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<style>
    .oval-button {
        display: inline-block;
        background-color: blue;
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        text-decoration: none;
        margin-right: 8px;
    }

        .oval-button:hover {
            color: #F5F5DC;
        }

    .beige-input {
        background-color: #F5F5DC;
        border: 1px solid #DDD;
        padding: 8px;
        border-radius: 4px;
    }
</style>
